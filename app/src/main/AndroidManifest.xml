<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.edu.uepb.nutes.ocariot.uaal_poc">

    <!-- Bluetooth permissions -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Storage permissions -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- uAAL permissions -->
    <uses-permission android:name="org.universAAL.android.permission.SYS" />
    <uses-permission android:name="org.universAAL.android.permission.SETTINGS" />

    <!-- Google Cloud Message Required Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission
        android:name="br.edu.uepb.nutes.ocariot.uaal_poc.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission android:name="br.edu.uepb.nutes.ocariot.uaal_poc.permission.C2D_MESSAGE" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!--Instruct the universAAL middleware application that
        it must look for metadata in the file uaal.xml-->
        <meta-data
            android:name="org.universAAL.android.metadata"
            android:resource="@raw/uaal" />

        <activity android:name=".view.ui.activity.MainActivity"
		      android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		
        <activity
            android:name=".view.ui.activity.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.ui.preference.SettingsActivity"
            android:label="@string/settings_title"
            android:theme="@style/AppTheme.Preferences" />

    </application>

</manifest>